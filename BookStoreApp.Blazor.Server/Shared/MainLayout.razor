@inherits LayoutComponentBase
@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />
<PageTitle>BookStoreApp.Blazor.Server</PageTitle>
<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">


            <span>
            <img src="sahal_logo_white.png" width="250" height="200" style="color:white; margin-left:-15%;" alt="profile-user"/>
            </span>
        </MudText>
        <MudSpacer />



        <MudButton StartIcon="@Icons.Material.Filled.Dashboard" Href="/" Color="Color.Inherit" >
            Dashboard
        </MudButton>


        <MudButton StartIcon="@Icons.Material.Filled.Dashboard" Href="/" Color="Color.Inherit">
            Dashboard
        </MudButton>



        <MudButton StartIcon="@Icons.Material.Filled.Dashboard" Href="/" Color="Color.Inherit">
            Dashboard
        </MudButton>



        <MudButton StartIcon="@Icons.Material.Filled.Dashboard" Href="/" Color="Color.Inherit">
            Dashboard
        </MudButton>


         <MudSpacer />

        <MudSpacer />



        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}